{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2015",
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "typedocOptions": {
    "mode": "modules",
    "out": "docs",
    "inputFiles": ["./src"]
  }
}
