{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "lib": [ "es2015", "dom" ],
    "allowSyntheticDefaultImports": true,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "typedocOptions": {
    "mode": "file",
    "out": "docs",
    "inputFiles": ["./src"]
  }
}
